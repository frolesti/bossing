// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================
// PRODUCTES
// ==================

model Product {
  id             String   @id @default(cuid())
  name           String
  normalizedName String
  brand          String?
  category       String
  subcategory    String?
  description    String?
  imageUrl       String?
  barcode        String?  @unique
  unit           String   @default("ud")
  size           Float?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  prices       Price[]
  priceHistory PriceHistory[]
  listItems    ShoppingListItem[]

  @@index([normalizedName])
  @@index([category])
  @@index([barcode])
}

model Price {
  id            String   @id @default(cuid())
  productId     String
  supermarketId String
  price         Float
  originalPrice Float?
  pricePerUnit  Float
  available     Boolean  @default(true)
  lastScraped   DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  product     Product     @relation(fields: [productId], references: [id])
  supermarket Supermarket @relation(fields: [supermarketId], references: [id])

  @@unique([productId, supermarketId])
  @@index([supermarketId])
  @@index([price])
}

model PriceHistory {
  id            String   @id @default(cuid())
  productId     String
  supermarketId String
  price         Float
  pricePerUnit  Float
  recordedAt    DateTime @default(now())

  product     Product     @relation(fields: [productId], references: [id])
  supermarket Supermarket @relation(fields: [supermarketId], references: [id])

  @@index([productId, supermarketId, recordedAt])
}

// ==================
// SUPERMERCATS
// ==================

model Supermarket {
  id       String  @id @default(cuid())
  name     String
  slug     String  @unique
  logoUrl  String?
  website  String
  color    String  @default("#000000")
  isActive Boolean @default(true)

  locations    SupermarketLocation[]
  prices       Price[]
  priceHistory PriceHistory[]

  @@index([slug])
}

model SupermarketLocation {
  id            String  @id @default(cuid())
  supermarketId String
  name          String
  address       String
  city          String
  postalCode    String
  lat           Float
  lng           Float
  phone         String?
  isOpen24h     Boolean @default(false)

  supermarket Supermarket @relation(fields: [supermarketId], references: [id])
  schedule    Schedule[]

  @@index([supermarketId])
  @@index([lat, lng])
  @@index([city])
}

model Schedule {
  id         String @id @default(cuid())
  locationId String
  dayOfWeek  Int // 0 = Sunday, 6 = Saturday
  openTime   String // "09:00"
  closeTime  String // "21:00"
  isClosed   Boolean @default(false)

  location SupermarketLocation @relation(fields: [locationId], references: [id])

  @@unique([locationId, dayOfWeek])
}

// ==================
// USUARIS
// ==================

model User {
  id                   String   @id @default(cuid())
  email                String   @unique
  passwordHash         String?
  name                 String?
  preferredLat         Float?
  preferredLng         Float?
  favoriteSupermarkets String[] @default([])
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  shoppingLists ShoppingList[]

  @@index([email])
}

// ==================
// LLISTES DE COMPRA
// ==================

model ShoppingList {
  id        String   @id @default(cuid())
  userId    String
  name      String   @default("La meva llista")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User               @relation(fields: [userId], references: [id])
  items ShoppingListItem[]

  @@index([userId])
}

model ShoppingListItem {
  id        String   @id @default(cuid())
  listId    String
  productId String?
  name      String
  quantity  Float    @default(1)
  unit      String?
  notes     String?
  checked   Boolean  @default(false)
  addedAt   DateTime @default(now())

  list    ShoppingList @relation(fields: [listId], references: [id], onDelete: Cascade)
  product Product?     @relation(fields: [productId], references: [id])

  @@index([listId])
}

// ==================
// SCRAPING
// ==================

model ScrapingJob {
  id            String    @id @default(cuid())
  supermarketId String
  status        String    @default("pending") // pending, running, completed, failed
  startedAt     DateTime?
  completedAt   DateTime?
  productsFound Int       @default(0)
  errors        String[]  @default([])
  createdAt     DateTime  @default(now())

  @@index([supermarketId, status])
  @@index([createdAt])
}
